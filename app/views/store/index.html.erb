<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

    <h1 class="font-bold text-xl mb-6 pb-2 border-b-2">
      Your Pragmatice Catalog
    </h1>

  <ul>
    <% cache @products do %>
      <% @products.each do |product| %>
        <% cache product do %>
        <li class="flex mb-6">
          <%= image_tag(product.image_url,
              class: 'object-contain w-40 h-48 shadow mr-6') %>
          <div>
            <h2 class="font-bold text-lg mb-3"><%= product.title %></h2>
            <p>
              <%= sanitize(product.description) %>
            </p>
            <div class="mt-3 ">
              <span class="bg-green-600 text-white px-4 py-3 rounded-lg">
                <%= number_to_currency(product.price) %>
              </span>
              <span>
                <%= button_to 'Add to Card',
                  line_items_path(product_id: product),
                  form_class: 'inline',
                  class: 'ml-4 rounded-lg py-3 px-4 text-white bg-green-600' %>
              </span>
            </div>
          </div>
        </li>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>
